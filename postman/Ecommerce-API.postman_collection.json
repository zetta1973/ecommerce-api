{
  "info": {
    "name": "Ecommerce API",
    "description": "API de e-commerce con autenticación JWT - Colección para pruebas",
    "version": "1.0.0",
    "_postman_id": "ecommerce-api-collection"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "AUTH - Autenticación",
      "item": [
        {
          "name": "1. Registrar usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@test.com\",\n    \"password\": \"test123\"\n}"
            },
            "description": "Registra un nuevo usuario en el sistema"
          },
          "response": []
        },
        {
          "name": "2. Login usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@test.com\",\n    \"password\": \"test123\"\n}"
            },
            "description": "Inicia sesión y obtiene tokens JWT"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.refreshToken);",
                  "    console.log('Token guardado:', jsonData.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "3. Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "refresh"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "description": "Renueva el token de acceso usando el refresh token"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    console.log('Token renovado');",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "ADMIN - Administración",
      "item": [
        {
          "name": "4. Ping (Público)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/admin/ping",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "ping"
              ]
            },
            "description": "Endpoint público para verificar que el servidor está funcionando"
          },
          "response": []
        },
        {
          "name": "5. Listar usuarios",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "users"
              ]
            },
            "description": "Lista todos los usuarios registrados (requiere rol ADMIN)"
          },
          "response": []
        },
        {
          "name": "6. Asignar permiso a rol",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/roles/assign",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "roles",
                "assign"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"roleName\": \"ROLE_USER\",\n    \"permissionName\": \"READ_PRODUCTS\"\n}"
            },
            "description": "Asigna un permiso a un rol específico"
          },
          "response": []
        }
      ]
    },
    {
      "name": "PRODUCTS - Productos",
      "item": [
        {
          "name": "7. Listar todos (Público)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products"
              ]
            },
            "description": "Obtiene lista de todos los productos (público)"
          },
          "response": []
        },
        {
          "name": "8. Buscar productos",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/products/search?name=product",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products",
                "search"
              ],
              "query": [
                {
                  "key": "name",
                  "value": "product",
                  "description": "Término de búsqueda"
                }
              ]
            },
            "description": "Busca productos por nombre"
          },
          "response": []
        },
        {
          "name": "9. Crear producto",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Producto Test\",\n    \"description\": \"Descripción del producto de prueba\",\n    \"price\": 29.99,\n    \"stock\": 100\n}"
            },
            "description": "Crea un nuevo producto (requiere CREATE_PRODUCTS)"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('productId', jsonData.id);",
                  "    console.log('Producto creado con ID:', jsonData.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "10. Ver producto específico",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products",
                "{{productId}}"
              ]
            },
            "description": "Obtiene detalles de un producto específico (requiere READ_PRODUCTS)"
          },
          "response": []
        },
        {
          "name": "11. Ver stock producto",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}/stock",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products",
                "{{productId}}",
                "stock"
              ]
            },
            "description": "Obtiene el stock de un producto específico (requiere READ_PRODUCT_STOCK)"
          },
          "response": []
        },
        {
          "name": "12. Actualizar producto",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products",
                "{{productId}}"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Producto Actualizado\",\n    \"description\": \"Nueva descripción del producto\",\n    \"price\": 39.99,\n    \"stock\": 150\n}"
            },
            "description": "Actualiza un producto existente (requiere UPDATE_PRODUCTS)"
          },
          "response": []
        },
        {
          "name": "13. Eliminar producto",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products",
                "{{productId}}"
              ]
            },
            "description": "Elimina un producto (requiere DELETE_PRODUCTS)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "ORDERS - Pedidos",
      "item": [
        {
          "name": "14. Crear orden",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"productIds\": [\n        {{productId}}\n    ]\n}"
            },
            "description": "Crea una nueva orden con los productos especificados (requiere CREATE_ORDERS)"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('orderId', jsonData.id);",
                  "    console.log('Orden creada con ID:', jsonData.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "15. Mis órdenes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders"
              ]
            },
            "description": "Obtiene las órdenes del usuario autenticado (requiere READ_OWN_ORDERS)"
          },
          "response": []
        },
        {
          "name": "16. Ver orden específica",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders",
                "{{orderId}}"
              ]
            },
            "description": "Obtiene detalles de una orden específica"
          },
          "response": []
        },
        {
          "name": "17. Listar todas las órdenes (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders/all",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders",
                "all"
              ]
            },
            "description": "Lista todas las órdenes del sistema (requiere READ_ALL_ORDERS)"
          },
          "response": []
        },
        {
          "name": "18. Actualizar estado orden",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/status?status=SHIPPED",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders",
                "{{orderId}}",
                "status"
              ],
              "query": [
                {
                  "key": "status",
                  "value": "SHIPPED",
                  "description": "Nuevo estado: PENDING, PROCESSING, SHIPPED, DELIVERED, CANCELLED"
                }
              ]
            },
            "description": "Actualiza el estado de una orden (requiere UPDATE_ORDER_STATUS)"
          },
          "response": []
        },
        {
          "name": "19. Órdenes de un usuario",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders/user/1",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "orders",
                "user",
                "1"
              ]
            },
            "description": "Lista las órdenes de un usuario específico (requiere READ_USER_ORDERS)"
          },
          "response": []
        }
      ]
    }
  ]
}
