<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Appender para consola con formato JSON -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <level>level</level>
                <thread>thread</thread>
                <logger>logger</logger>
                <message>message</message>
            </fieldNames>
        </encoder>
    </appender>

    <!-- Suprimir logs de com.santalucia.amw.core.rest.client.RestClient -->
    <logger name="com.santalucia.amw.core.rest.client.RestClient" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logs detallados para Spring Boot y com.ecommerce -->
    <logger name="org.springframework.boot" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="org.springframework.context" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="com.ecommerce" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger raÃ­z -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
