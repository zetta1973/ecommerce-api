{
  "info": {
    "name": "E-Commerce API",
    "description": "Colección de pruebas para la API de E-Commerce con autenticación JWT",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Registrar Usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"usuario_test\",\n  \"email\": \"usuario_test@ejemplo.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "description": "Registra un nuevo usuario en el sistema"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@ecommerce.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Inicia sesión y obtiene tokens JWT"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.token);",
                  "pm.collectionVariables.set(\"refreshToken\", jsonData.refreshToken);",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Token is present\", function () {",
                  "    pm.expect(jsonData.token).to.exist;",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            },
            "description": "Renueva el token de acceso usando el refresh token"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Productos",
      "item": [
        {
          "name": "Listar todos los productos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            },
            "description": "Obtiene la lista completa de productos (público)"
          }
        },
        {
          "name": "Buscar productos por nombre",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/search?name=laptop",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "search"],
              "query": [
                {
                  "key": "name",
                  "value": "laptop"
                }
              ]
            },
            "description": "Busca productos que contengan el texto especificado en el nombre"
          }
        },
        {
          "name": "Obtener producto por ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            },
            "description": "Obtiene detalles de un producto específico (requiere autenticación y permiso READ_PRODUCTS)"
          }
        },
        {
          "name": "Consultar stock de producto",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}/stock",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}", "stock"]
            },
            "description": "Obtiene el stock disponible de un producto (requiere permiso READ_PRODUCT_STOCK)"
          }
        },
        {
          "name": "Crear producto",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Laptop Gamer\",\n  \"description\": \"Laptop de alto rendimiento para gaming\",\n  \"price\": 1299.99,\n  \"stock\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            },
            "description": "Crea un nuevo producto (requiere permiso CREATE_PRODUCTS)"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"productId\", jsonData.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Actualizar producto",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": {{productId}},\n  \"name\": \"Laptop Gamer Pro\",\n  \"description\": \"Laptop de alto rendimiento para gaming actualizado\",\n  \"price\": 1199.99,\n  \"stock\": 45\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            },
            "description": "Actualiza un producto existente (requiere permiso UPDATE_PRODUCTS)"
          }
        },
        {
          "name": "Eliminar producto",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            },
            "description": "Elimina un producto (requiere permiso DELETE_PRODUCTS)"
          }
        }
      ]
    },
    {
      "name": "Pedidos",
      "item": [
        {
          "name": "Crear pedido",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productIds\": [1, 2, 3]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            },
            "description": "Crea un nuevo pedido con los productos especificados (requiere permiso CREATE_ORDERS)"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"orderId\", jsonData.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Obtener mis pedidos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            },
            "description": "Obtiene los pedidos del usuario autenticado (requiere permiso READ_OWN_ORDERS)"
          }
        },
        {
          "name": "Obtener todos los pedidos (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders/all",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "all"]
            },
            "description": "Obtiene todos los pedidos del sistema (requiere permiso READ_ALL_ORDERS)"
          }
        },
        {
          "name": "Obtener pedidos por usuario",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders/user/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "user", "1"]
            },
            "description": "Obtiene los pedidos de un usuario específico (requiere permiso READ_USER_ORDERS)"
          }
        },
        {
          "name": "Actualizar estado de pedido",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderId}}/status?status=PROCESSING",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderId}}", "status"],
              "query": [
                {
                  "key": "status",
                  "value": "PROCESSING"
                }
              ]
            },
            "description": "Actualiza el estado de un pedido (requiere permiso UPDATE_ORDER_STATUS). Estados posibles: PENDING, PROCESSING, SHIPPED, DELIVERED, CANCELLED"
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Ping Admin",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/ping",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "ping"]
            },
            "description": "Endpoint de prueba para verificar que el admin está activo"
          }
        },
        {
          "name": "Listar usuarios",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users"]
            },
            "description": "Obtiene la lista de todos los usuarios del sistema (requiere permiso READ_USERS)"
          }
        }
      ]
    },
    {
      "name": "Escenarios de Prueba",
      "item": [
        {
          "name": "Flujo completo: Registro → Login → Crear Producto → Crear Pedido",
          "request": {
            "description": "Ejecuta este flujo completo para probar la integración del sistema",
            "url": "postman://run?collection={{collectionId}}"
          },
          "item": [
            {
              "name": "1. Registrar nuevo usuario",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"username\": \"cliente_nuevo\",\n  \"email\": \"cliente_nuevo@ejemplo.com\",\n  \"password\": \"Cliente123!\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/auth/register",
                  "host": ["{{baseUrl}}"],
                  "path": ["auth", "register"]
                }
              }
            },
            {
              "name": "2. Login como admin",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"email\": \"admin@ecommerce.com\",\n  \"password\": \"admin123\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/auth/login",
                  "host": ["{{baseUrl}}"],
                  "path": ["auth", "login"]
                }
              },
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "var jsonData = pm.response.json();",
                      "pm.collectionVariables.set(\"token\", jsonData.token);",
                      "pm.collectionVariables.set(\"refreshToken\", jsonData.refreshToken);"
                    ]
                  }
                }
              ]
            },
            {
              "name": "3. Crear producto",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"name\": \"Producto de Prueba\",\n  \"description\": \"Producto creado para pruebas\",\n  \"price\": 99.99,\n  \"stock\": 100\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/products",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "products"]
                }
              },
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 201) {",
                      "    var jsonData = pm.response.json();",
                      "    pm.collectionVariables.set(\"productId\", jsonData.id);",
                      "}"
                    ]
                  }
                }
              ]
            },
            {
              "name": "4. Crear pedido",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"productIds\": [{{productId}}]\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/orders",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "orders"]
                }
              },
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 201) {",
                      "    var jsonData = pm.response.json();",
                      "    pm.collectionVariables.set(\"orderId\", jsonData.id);",
                      "}"
                    ]
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}